<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a2bece"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a2bece"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="31dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/logo" />

        <TextView
            android:id="@+id/txtCustomerUsername"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/afacad_semibold"
            android:paddingBottom="20dp"
            android:text="Username"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnSearchParking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#1C2B37"
            android:fontFamily="@font/afacad_semibold"
            android:text="Search Parking Space"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnShowQRCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#1C2B37"
            android:fontFamily="@font/afacad_semibold"
            android:text="Show QR Code"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnRenewal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#1C2B37"
            android:fontFamily="@font/afacad_semibold"
            android:text="Renewal"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnReservations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#1C2B37"
            android:fontFamily="@font/afacad_semibold"
            android:text="Reservations"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#1C2B37"
            android:fontFamily="@font/afacad_semibold"
            android:text="Logout"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>